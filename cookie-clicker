<body>
    <div class="game-container">
        <h1>Cookie Clicker</h1>
        <p>Cliquez sur le cookie pour obtenir des cookies !</p>
        <button id="cookieButton">Cliquez ici !</button>
        <p class="score">Cookies : <span id="cookieCount">0</span></p>
        <p class="message" id="message"></p>
        <a href="index.html">Retour au jeu précédent</a>
    </div>

    <script>
        // Initialiser la variable pour les cookies
        let cookies = 0;

        // Sélectionner le bouton et la zone de texte pour afficher les cookies
        const cookieButton = document.getElementById("cookieButton");
        const cookieCountElement = document.getElementById("cookieCount");

        // Fonction pour augmenter le nombre de cookies
        cookieButton.addEventListener("click", function() {
            cookies++;
            cookieCountElement.textContent = cookies;

            // Afficher un message après avoir cliqué 10 fois
            if (cookies === 10) {
                document.getElementById("message").textContent = "Vous avez atteint 10 cookies !";
            } else if (cookies === 50) {
                document.getElementById("message").textContent = "Félicitations ! Vous avez atteint 50 cookies !";
            }
        });
    </script>
